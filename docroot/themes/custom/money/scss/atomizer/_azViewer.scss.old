
.embedded-entity {
  .type-atomizer {
    h2 {
      display: none;
    }
  }
}

.az-atomizer-wrapper {
  &.az-fullscreen {
    background-color: $color-dark-blue;
    width: 100%;
    height: 100%;
  }

  .copyright {
    position: absolute;
    bottom: 10px;
    right: 10px;
    opacity: .5;
    font-size: 80%;
  }
}


article.az-atomizer {
  &.align-left {
    margin-right: 20px;
  }
  &.align-right {
    margin-left: 20px;
  }
  h2 {
    display: none;
  }
  figcaption {
    width: 100%;
    text-align: center;
    font-style: italic;
    margin-bottom: 20px;
  }
}
