  }

  .az-control-opacity,
  .az-control-opacityMaster {
    .az-color {
      border-radius: 20%;
      //  border: 1px solid $base-bd-color;
      display: inline-flex;
      width: 16px;
      height: 16px;
      vertical-align: middle;
    }
  }
}
